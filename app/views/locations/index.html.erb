<% render :partial => "shared/init_map" %>

<% @page_title = "My Locations" %>

<% content_for :page_options do %>
  <%= link_to image_tag("icons/plus-circle.png", :alt => "Add a location") + "Add a location", "#", :title => "Add a location", :class => "add button show_modal" %>
<% end %>

<% content_for :modal do %>
  <form class="lw80">
    <p>
      <label>Name</label>
      <input type="text"/>
    </p>
    <p>
      <label>Address</label>
      <input type="text"/>
      <button>Find it!</button>
    </p>
    <p class="indent submit">
      <button>Save</button>
      or <%= link_to_function "Cancel", "", :title => "Cancel", :class => "negative modal_close" %>
    </p>
  </form>
<% end %>

<div id="map"></div>