<% @page_title = "My Account" %>
<% @layout = "with_sidebar_left" %>

<%= render :partial => "update_picture" %>

<% content_for :sidebar_left do %>
  <%= render :partial => "nav" %>
<% end %>

<div class="panel">
  <div class="content">
    <h3>My Profile</h3>
    <p class="leader">
      Paint us a picture, tell us a little bit about yourself.
    </p>
    <%= link_to_function image_tag("", :alt => "asdf") + content_tag(:span, "Update Picture"), "asdf", :title => "Update Picture", :class => "picture show_modal" %>
    <form class="lw120">
      <p>
        <label>First Name</label>
        <input type="text"/>
      </p>
      <p>
        <label>Last Name</label>
        <input type="text"/>
      </p>
      <p>
        <label>Description</label>
        <textarea cols="30"></textarea>
      </p>
      <p>
        <label>Born</label>
        <select>
          <option>15</option>
        </select>
        <select>
          <option>November</option>
        </select>
        <select>
          <option>2000</option>
        </select>
      </p>
      <p>
        <label>Gender</label>
        <input type="radio"/><label class="inline">Male</label>
        <input type="radio"/><label class="inline">Female</label>
      </p>
      <p class="submit indent">
        <button>Save</button>
      </p>
    </form>
  </div>
</div>