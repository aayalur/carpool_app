<% @page_title = "My Profile" %>
<% @layout = "with_sidebar_left" %>

<% content_for :sidebar_left do %>
  <%= render :partial => "nav" %>
<% end %>

<p class="breadcrumbs">
  <%= link_to "My Account", account_path, :title => "My Account" %> /
  My Profile
</p>

<form class="lw80">
  <p>
    <label>First Name</label>
    <input type="text"/>
  </p>
  <p>
    <label>Last Name</label>
    <input type="text"/>
  </p>
  <p>
    <label>Gender</label>
    <input type="radio"/><label class="choice">Male</label>
    <input type="radio"/><label class="choice">Female</label>
  </p>
  <p>
    <label>Date of Birth</label>
    <select>
      <option>15</option>
    </select>
    <select>
      <option>November</option>
    </select>
    <select>
      <option>2000</option>
    </select>
  </p>
  <p class="submit indent">
    <button>Save</button>
  </p>
</form>