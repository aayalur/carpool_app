<% @page_title = "Email &amp; Password" %>
<% @layout = "with_sidebar_left" %>

<% content_for :sidebar_left do %>
  <%= render :partial => "nav" %>
<% end %>

<p class="breadcrumbs">
  <%= link_to "My Account", account_path, :title => "My Account" %> /
  Email &amp; Password
</p>

<form class="lw120">
  <p>
    <label>Email</label>
    <input type="text"/>
  </p>
  <p>
    <label>Old Password</label>
    <input type="password"/>
  </p>
  <p>
    <label>New Password</label>
    <input type="password"/>
  </p>
  <p>
    <label>Confirm Password</label>
    <input type="password"/>
  </p>
  <p class="submit indent">
    <button>Save</button>
  </p>
</form>