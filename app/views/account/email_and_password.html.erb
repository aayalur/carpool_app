<% @page_title = "My Account" %>
<% @layout = "with_sidebar_left" %>

<% content_for :sidebar_left do %>
  <%= render :partial => "nav" %>
<% end %>

<div class="panel">
  <div class="content">
    <h3>Email &amp; Password</h3>
    <p class="leader">
      Change how you can access the site
    </p>
    <form class="lw120">
      <p>
        <label>Email</label>
        <input type="text"/>
      </p>
      <p>
        <label>Old Password</label>
        <input type="password"/>
      </p>
      <p>
        <label>New Password</label>
        <input type="password"/>
      </p>
      <p>
        <label>Confirm Password</label>
        <input type="password"/>
      </p>
      <p class="submit indent">
        <button>Save</button>
      </p>
    </form>
  </div>
</div>